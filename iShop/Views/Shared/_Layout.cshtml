<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/iShop.styles.css" asp-append-version="true" />
    <link href="~/css/mystyle.css" rel="stylesheet" />
</head>
<body style="direction : rtl;text-align : right">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-1 border-bottom navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--Register/Login-->
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item pull-right">
                                <a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="Logout">خروج</a>
                            </li>

                            <li class="nav-item pull-right" style="padding-right:2em">
                                <a class="nav-link hov" asp-area="" asp-controller="Product" asp-action="ShowCart">سبد خرید</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item pull-right">
                                <a class="nav-link hov" asp-area="" asp-controller="Account" asp-action="Register">ثبت نام</a>
                            </li>
                            <li class="nav-item pull-right">
                                <a class="nav-link">/</a>
                            </li>
                            <li class="nav-item pull-right">
                                <a class="nav-link hov" asp-area="" asp-controller="Account" asp-action="Login">ورود</a>
                            </li>
                        }
                        <!--Register/Login End-->
                        <li class="nav-item" style="margin-right : 7em">
                            <a class="nav-link hov " asp-area="" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                        </li>
                        <li class="nav-item">
                            <partial name="_Groups" />
                        </li>

                        <li class="nav-item hov">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="ContactUs">تماس با ما</a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index" style="direction : ltr;text-align;padding-left :5em : le"><span class="text-primary">i</span>Shop</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <br />
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
